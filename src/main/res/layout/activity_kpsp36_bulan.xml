<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.karindra.kpsp.KPSP36BULAN">


    <TextView
        android:id="@+id/textView3"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PERTANYAAN KPSP USIA 36 BULAN"
        android:layout_marginTop="32dp"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#b87333"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/txtPertanyaan"
        android:layout_width="300dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="20dp"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="300dp"
        android:textAlignment="center"
        android:layout_height="130dp"
        android:layout_below="@+id/txtPertanyaan"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        />

    <Button
        android:id="@+id/btnYA"
        android:background="@drawable/button_states"
        android:layout_width="100dp"
        android:textSize="20dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="36dp"
        android:text="YA"
        android:layout_below="@+id/imageView"
        android:layout_alignStart="@+id/imageView" />

    <Button
        android:id="@+id/btnTIDAK"
        android:background="@drawable/button_states"
        android:textSize="20dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:text="TIDAK"
        android:layout_alignBaseline="@+id/btnYA"
        android:layout_alignBottom="@+id/btnYA"
        android:layout_toEndOf="@+id/btnYA" />

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="" />


</RelativeLayout>
