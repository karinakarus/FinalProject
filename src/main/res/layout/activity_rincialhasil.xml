<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#01796f"
    tools:context="com.example.karindra.kpsp.Activity_RincialHasil">


    <TextView
        android:id="@+id/txtNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#dbd7d2"
        android:text="NO"
        android:layout_marginStart="24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/txtNama_Anak"
        android:textColor="#dbd7d2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NAMA ANAK"
        android:layout_below="@+id/txtNo"
        android:layout_alignStart="@+id/txtNo" />

    <TextView
        android:id="@+id/txtTgl_Lhr"
        android:textColor="#dbd7d2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TGL LAHIR"
        android:layout_below="@+id/txtNama_Anak"
        android:layout_alignStart="@+id/txtNama_Anak" />

    <TextView
        android:id="@+id/txtBerat_Badan"
        android:textColor="#dbd7d2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BERAT BADAN"
        android:layout_below="@+id/txtTgl_Lhr"
        android:layout_alignStart="@+id/txtTgl_Lhr"
        android:layout_marginTop="15dp" />


    <TextView
        android:id="@+id/txtUsia"
        android:textColor="#dbd7d2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="USIA"
        android:layout_below="@+id/txtTgl_Lhr"
        android:layout_alignStart="@+id/txtBerat_Badan" />


    <TextView
        android:id="@+id/txtHasil"
        android:textColor="#ffa500"
        android:textSize="18dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TEXT"
        android:layout_marginTop="47dp"
        android:layout_below="@+id/txtBerat_Badan"
        android:layout_alignStart="@+id/txtScore" />


    <TextView
     android:id="@+id/txtNasihat"
     android:textColor="#dbd7d2"
     android:gravity="bottom"
     android:textSize="18dp"
     android:paddingLeft="5dp"
     android:paddingRight="5dp"
     android:scrollbars="vertical"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:text="TextView"
     android:layout_marginTop="21dp"
     android:layout_below="@+id/textView7"
     android:layout_alignParentStart="true" />




    <TextView
        android:id="@+id/txtScore"
        android:textColor="#ffa500"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_below="@+id/txtHasil"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnSimpan"
        android:background="@drawable/button_states"
        android:layout_width="100dp"
        android:textStyle="bold"
        android:layout_height="50dp"
        android:layout_marginBottom="12dp"
        android:text="SIMPAN"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/txtNasihat" />


    <TextView
        android:id="@+id/textView7"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtScore"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="NASIHAT/ANJURAN" />




</RelativeLayout>
